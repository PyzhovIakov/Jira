			КолонкаИсточника.Имя = НСтр("ru='КолонкаЗначениеАнализа';en='КолонкаЗначениеАнализа'") + "__" 
				+ ИдентификаторЭлементаФормы;
		КонецЕсли;
	КонецЦикла;
	
	ТаблицаЗначенийМонитора.Загрузить(ДанныеИсточникаДанных);
	
	// Форматируем значение в соотвествии с данными показателя
