	Набор.Отбор.Объект.Установить(тмпПодразделение);
	Набор.Прочитать();
	Набор.Очистить();
	Если ИндивидуальныеНастройкиПодразделение Тогда
		Набор.Загрузить(ДанныеФормыВЗначение(ТаблицаФормПодразделения, Тип("ТаблицаЗначений")));
