&НаСервере
Процедура ПеретащитьНаСервере(ТаблицаИсточник, ТаблицаПриемник, ИмяФормыТмп, НаименованиеТмп)
	Модифицированность = Истина;
	СтруктураОтбора = Новый Структура("ИмяФормы", ИмяФормыТмп);
	Стр = ЭтотОбъект[ТаблицаПриемник].НайтиСтроки(СтруктураОтбора);
	Если Стр.Количество() > 0 Тогда
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = "Форма """ + НаименованиеТмп + """ уже добавлена.";
		Сообщение.Сообщить();
		Возврат;
	КонецЕсли;	
	
	СтрФорм = ЭтотОбъект[ТаблицаИсточник].НайтиСтроки(СтруктураОтбора);
	Если СтрФорм.Количество() > 0 Тогда
		ЭтотОбъект[ТаблицаИсточник].Удалить(ЭтотОбъект[ТаблицаИсточник].Индекс(СтрФорм[0]));
	КонецЕсли;

	Если ЗамещаемаяСтрокаПеретаскивания >= 0 Тогда
		ЗаменяемаяСтрока = ЭтотОбъект[ТаблицаПриемник].НайтиПоИдентификатору(ЗамещаемаяСтрокаПеретаскивания);
		ИндексЗаменяемой = ЭтотОбъект[ТаблицаПриемник].Индекс(ЗаменяемаяСтрока);
		Стр = ЭтотОбъект[ТаблицаПриемник].Вставить(ИндексЗаменяемой);
	Иначе
		Стр = ЭтотОбъект[ТаблицаПриемник].Добавить();
	КонецЕсли;	
	
	Попытка
		Стр.ИмяФормы = ИмяФормыТмп;
		Стр.Наименование = НаименованиеТмп;
		Если СтрНайти(ТаблицаПриемник, "Пользовател") Тогда
			Стр.Объект = Пользователь;
		ИначеЕсли СтрНайти(ТаблицаПриемник, "Подразделени") Тогда
			Стр.Объект = Подразделение;
		Иначе
			Стр.Объект = "Общие настройки";
		КонецЕсли;	
		
		Если СтрНайти(ТаблицаПриемник, "Скрытых") Тогда
			Стр.Скрытая = Истина;
		КонецЕсли;	
		
		Стр.Идентификатор = Строка(Новый УникальныйИдентификатор);
		Для а = 1 По ЭтотОбъект[ТаблицаПриемник].Количество() Цикл
			Стр = ЭтотОбъект[ТаблицаПриемник][а - 1];
			Стр.Порядок = а;
		КонецЦикла;	
	Исключение
		Стр.ИмяФормы = ИмяФормыТмп;
		Стр.ПредставлениеФормы = НаименованиеТмп;
	КонецПопытки;
	
КонецПроцедуры

