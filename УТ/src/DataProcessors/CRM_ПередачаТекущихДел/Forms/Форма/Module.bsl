		ИначеЕсли ПолноеИмяОбъекта = "РегистрСведений.CRM_ИсполнителиЭтапов" Тогда
			Текст = СтрЗаменить(Текст, "ОбъектИБ.Дата МЕЖДУ &Дата1 И &Дата2", "Истина");
		ИначеЕсли ВидОбъекта = "Задача" Тогда
			Текст = СтрЗаменить(Текст, "ОбъектИБ.Дата МЕЖДУ &Дата1 И &Дата2", "ОбъектИБ.СрокИсполнения МЕЖДУ &Дата1 И &Дата2");
		ИначеЕсли ВидОбъекта = "Справочник" Тогда
			Текст = СтрЗаменить(Текст, "ОбъектИБ.Дата МЕЖДУ &Дата1 И &Дата2", "Истина");
		КонецЕсли;
		
		// Дата
		Если ПолноеИмяОбъекта = "Справочник.МаркетинговыеМероприятия" Тогда
			Текст = СтрЗаменить(Текст, "ОбъектИБ.Дата КАК ", "ОбъектИБ.ДатаНачала КАК ");
		ИначеЕсли ПолноеИмяОбъекта = "Документ.CRM_Телемаркетинг" Тогда
			Текст = СтрЗаменить(Текст, "ОбъектИБ.Дата КАК ", "ОбъектИБ.ДатаНачала КАК ");
		ИначеЕсли ПолноеИмяОбъекта = "РегистрСведений.CRM_ИсполнителиЭтапов" Тогда
			Текст = СтрЗаменить(Текст, "ОбъектИБ.Дата КАК ", "null КАК ");
		ИначеЕсли ВидОбъекта = "Справочник" Тогда
