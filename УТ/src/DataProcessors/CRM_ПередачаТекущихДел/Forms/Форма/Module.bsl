			Текст = СтрЗаменить(Текст, "ПРЕДСТАВЛЕНИЕ(ОбъектИБ.Партнер) КАК", """"" КАК");
			Текст = СтрЗаменить(Текст, "ОбъектИБ.Партнер КАК", "null КАК");
			Текст = СтрЗаменить(Текст, "ОбъектИБ.Партнер = &Клиент", "ИСТИНА");
