							Если Запрещенный["CRM_УровниДоступа"].Количество() > 0 Тогда
								ПартнерОбъект = Запрещенный.ПолучитьОбъект();
								Строка = ПартнерОбъект["CRM_УровниДоступа"].Добавить();
								Строка.УровеньДоступа = УровеньДоступаНовый;
								ПартнерОбъект.Записать();
							КонецЕсли;
						КонецЦикла;
					Исключение
						Результат = "НеОбработанПартнер";
						ВызватьИсключение;
					КонецПопытки;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	
		ЗафиксироватьТранзакцию();

	Исключение

