				СформироватьСтрокуПредставлениеСостоянияЗаказаФормы();
			ИначеЕсли Результат.Свойство("ДоступнаПлатнаяОтмена") И Результат.ДоступнаПлатнаяОтмена = Истина Тогда
				РезультатВыполнения = 2;
				СуммаОтмены = Результат.СуммаПлатнойОтмены;
			ИначеЕсли Результат.Свойство("ДоступнаОтмена") И Не Результат.ДоступнаОтмена Тогда
				РезультатВыполнения = 3;
			КонецЕсли;
		
