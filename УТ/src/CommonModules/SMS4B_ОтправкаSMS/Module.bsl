		КодОшибки = "-" + Строка(Сч);
		ОписанияОшибок.Вставить(КодОшибки, "(" + КодОшибки + ") " + НСтр("ru = 'Обратитесь в техподдержку.'"));
	КонецЦикла;
	
	ОписанияОшибок.Вставить("-65",
		 НСтр("ru = '(-65) Блокировка попытки отправки без регистрации отправителя у оператора.'"));
	ОписанияОшибок.Вставить("-66", НСтр("ru = '(-66) Не задан отправитель.'"));
	
	ОписанияОшибок.Вставить("-67", НСтр("ru = '(-67) Превышение сроков отправки.'"));
	ОписанияОшибок.Вставить("-68", НСтр("ru = '(-68) Пользователь заблокирован, обратитесь в техподдержку.'"));
	
	ОписанияОшибок.Вставить("-99999", НСтр("ru='Не удалось соединиться с сервером.'"));
	
	Возврат ОписанияОшибок;
	
КонецФункции

Функция ОписаниеОшибкиПоКоду(КодОшибки)
	
	ТекстСообщения = "";
	
	Если ТипЗнч(КодОшибки) = Тип("Строка")
		И СтроковыеФункцииКлиентСервер.ТолькоЦифрыВСтроке(КодОшибки) Тогда
		КодОшибкиЧисло = Число(КодОшибки);
		Если КодОшибкиЧисло >= -65536 И КодОшибкиЧисло <= -69 Тогда
			ТекстСообщения = "(" + КодОшибки + ") " + НСтр("ru = 'Обратитесь в техподдержку.'");
		КонецЕсли;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ТекстСообщения) Тогда
		Возврат ТекстСообщения;
	КонецЕсли;
	
	ОписанияОшибок = ОписанияОшибок();
	ТекстСообщения = ОписанияОшибок[КодОшибки];
	Если ТекстСообщения = Неопределено Тогда
		ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru='Код ошибки: ""%1"".'"), КодОшибки);
	КонецЕсли;
	Возврат ТекстСообщения;
	
КонецФункции

