	ИначеЕсли ТипЗнч(Результат) = Тип("Структура") Тогда
		Результат.ЗавершенДосрочно = Ложь;
		Результат.Вставить("Задача"					, Объект.Ссылка);
		Результат.Вставить("ЭтапДосрочногоЗавершения"	,
